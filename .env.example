# Database (Docker Compose)
DATABASE_URL="postgresql://postgres:password@localhost:5432/photo_calendar"

# NextAuth
NEXTAUTH_URL="http://localhost:3003"
NEXTAUTH_SECRET="generate-with-openssl-rand-hex-32"

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Kakao OAuth (Get from Kakao Developers)
KAKAO_CLIENT_ID=""
KAKAO_CLIENT_SECRET=""

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS="./google-cloud-key.json"
GOOGLE_CLOUD_PROJECT="photo-calendar-0809"

# OpenAI API (Get from OpenAI Platform)
OPENAI_API_KEY=""

# File Upload (Optional - Vercel Blob Storage)
BLOB_READ_WRITE_TOKEN=""

# Redis (Docker Compose)
REDIS_URL="redis://localhost:6379"

# TossPayments (Optional - for subscription)
TOSS_CLIENT_KEY=""
TOSS_SECRET_KEY=""

# Application Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"
FREE_MONTHLY_LIMIT=30
PRO_MONTHLY_LIMIT=1000

# Environment
NODE_ENV="development"
